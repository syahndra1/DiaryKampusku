<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00BDBDBD">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#5F6B48"
            android:text="MEMO"
            android:textSize="20dp"
            android:paddingTop="10dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_radius_all">

            <EditText
                android:id="@+id/edit_memo_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:inputType="text|textMultiLine"
                android:minLines="16"
                android:background="@drawable/camo_storke"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_memo_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_editmemo_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_radius_leftbottom"
                    android:text="Batalkan"/>
                <Button
                    android:id="@+id/button_editmemo_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/radius_rightbottom"
                    android:text="Simpan"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>