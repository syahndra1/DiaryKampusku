<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/homeworkcard_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/text_layout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#A32C28">
                <TextView
                    android:id="@+id/card_homework_classname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bmyeonsung"
                    android:text="Selamat tinggal"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/card_homework_datepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_barunpen_r"
                android:text="2018.11.01"
                android:textColor="#353535"
                android:textAlignment="center"
                android:textSize="15dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>